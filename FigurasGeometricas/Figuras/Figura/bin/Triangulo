public class Triangulo extends Figura {
    private int base, altura;
    public Triangulo (String tipo, int base, int altura){
        super (tipo);
        this.setBase(base);
        this.setAltura(altura);
    }

    getters & setters

@override
public double area(){
    return (double) this.base*this.altura/2;
  } 
}
